<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="@dimen/dp16"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginRight="@dimen/dp16"
    android:background="@drawable/chat_page_bg">


    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/male_icon" />

    <TextView
        android:id="@+id/txtMessageMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/imgUser"
        android:layout_toEndOf="@id/imgUser"
        android:lineSpacingExtra="@dimen/dp16"
        android:paddingLeft="@dimen/dp8"
        android:paddingTop="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:text="@string/sample"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16">

    </TextView>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp8"
        android:text="19:52:18"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/txtTime"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_done_all_black_24dp"
        app:tint="@color/telegramColor" />

</RelativeLayout>