<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.application">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Episods.CustomFragmentActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Episods.ViewPagerActivity" />
        <activity android:name=".Episods.ContactActivity"></activity>
        <activity android:name=".Episods.CustomPermissionActivity" />
        <activity android:name=".Episods.CustomMenuActivity" />
        <activity android:name=".Episods.TabwidgetActivity" />
        <activity android:name=".Episods.ImageViewItemActivity" />
        <activity android:name=".Episods.RecyclerViewActivity" />
        <activity android:name=".Episods.CustomGridViewActivity" />
        <activity android:name=".Episods.MainActivity" />
    </application>

</manifest>